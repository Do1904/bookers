<h1>Books#edit</h1>

<% if @editing_book.errors.any? %>
  <%= @editing_book.errors.count %>件のエラーが発生しました
  <ul>
    <% @editing_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @editing_book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <%= f.submit '保存' %>
  
<% end %>

<%= link_to "Back", "/books/" %>
